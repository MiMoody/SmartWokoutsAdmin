@model IEnumerable<FirstApplication.Models.Workouts>

@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/ButtonAdd.css")
@Styles.Render("~/Content/Workouts.css")


<table class="tableForWorkouts">
    <tr class="HeadRowTableForWorkouts">
        <th>
            Название
        </th>
        <th>
            Премиум-тренировка
        </th>
        <th>
            Тип
        </th>
        <th>
            <span class="btn"> @Html.ActionLink("Добавить тренировку", "Create", null, new { @class = "BtnLink" })</span>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="rowSelect">
            <td>
                @Html.DisplayFor(modelItem => item.Name_Workout)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Premium_Works.Name_Premium_Work)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Types_Workout.Name_Type)
            </td>
            <td>
                <a href='@Url.Action("Details",
                   new { id = item.ID_Workout })'
                   class="fas fa-eye">
                </a>
                <a href='@Url.Action("Edit",
                   new { id = item.ID_Workout })'
                   class="fas fa-edit">
                </a>
                <a href='@Url.Action("Delete",
                   new { id = item.ID_Workout })'
                   class="fas fa-trash">
                </a>
            </td>
        </tr>
    }

</table>
