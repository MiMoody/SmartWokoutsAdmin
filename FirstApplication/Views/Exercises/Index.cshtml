@model IEnumerable<FirstApplication.Models.Exercises>

@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/ButtonAdd.css")
@Styles.Render("~/Content/Exercise.css")


<p>

</p>
<table class="tableForExercise">
    <caption>Таблица - упражнения</caption>
    <tr class="HeadRowTableForExercise">
        <th>
            Название
        </th>
      
        <th>
            Длительность, сек
        </th>
        <th>
            Премиум - тренировка
        </th>
        <th>
            Тип
        </th>
        <th>
            <span class="btn">@Html.ActionLink("Добавить упражнение", "Create", null, new { @class = "BtnLink" })</span>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="rowSelect">
            <td>
                @Html.DisplayFor(modelItem => item.Name_Exercise)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Duration_Exercise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Premium_Works.Name_Premium_Work)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Types_Workout.Name_Type)
            </td>
            <td>
                <a href='@Url.Action("Details",
                   new { id = item.ID_Exercise })'
                   class="fas fa-eye">
                </a>
                <a href='@Url.Action("Edit",
                   new { id = item.ID_Exercise })'
                   class="fas fa-edit">
                </a>
                <a href='@Url.Action("Delete",
                   new { id = item.ID_Exercise })'
                   class="fas fa-trash">
                </a>
            </td>
        </tr>
    }

</table>
